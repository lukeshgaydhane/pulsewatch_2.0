# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pulsewatch

# Server Configuration
SERVER_PORT=8084

# JPA Configuration
JPA_HIBERNATE_DDL_AUTO=update
JPA_SHOW_SQL=false

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Email Configuration (Gmail example)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Gupshup WhatsApp API Configuration
GUPSHUP_API_KEY=your-gupshup-api-key
GUPSHUP_API_URL=https://api.gupshup.io/sm/api/v1/msg
GUPSHUP_SOURCE_NUMBER=your-whatsapp-number
GUPSHUP_APP_NAME=pulsewatch

# Alert Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85

# RabbitMQ Queue Configuration
ALERT_QUEUE_NAME=alerts.queue
ALERT_EXCHANGE_NAME=alerts.exchange
ALERT_ROUTING_KEY=alerts.routing.key

# Logging Configuration
LOGGING_LEVEL_COM_PULSEWATCH_ALERTING=INFO
LOGGING_LEVEL_AMQP=INFO
LOGGING_LEVEL_HIBERNATE_SQL=DEBUG

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always 